div(style="width:30vw;")
    h4(md-dialog-title)
        span Change password?
    div
        md-list
            md-list-item
                md-input-container(style="width:100%")
                    input(mdInput,type="password", #cpass, [(ngModel)] = "current_password", placeholder="Current Password")
            md-list-item
                md-input-container(style="width:100%")
                    input(mdInput,type="password", #npass, [(ngModel)] = "new_password", placeholder="New Password")
    md-dialog-actions
        button(md-raised-button,md-dialog-close) 
            span cancel
        button(md-raised-button,color="primary", (click)="changePass()") 
            span change password
                
